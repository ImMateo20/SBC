<header class="">
    <div class="div-navbar">
        <a href="/" id="link-titulo">
            <h1><img id="img-favicon" src="/img/favicon.png" alt="" style="width: 50px;">DIABEXPERT</h1>
        </a>
        <button class="navbar-toggle contenedor-btn-x" id="menu-toggle">
            <span class="bar" style="background-color: white;"></span>
            <span class="bar" style="background-color: white;"></span>
            <span class="bar" style="background-color: white;"></span>
        </button>


        <nav class="navbar">
            <ul class="navbar-links" id="navbar-links">
                <li><a href="/"><i class="bi bi-house-door-fill"></i> Inicio</a></li>
                <% if (typeof usuario==='undefined' ) { %>
                    <li><a href="/auth/login"><i class="bi bi-box-arrow-in-left"></i> Iniciar sesión</a></li>
                    <li><a href="/auth/signin"><i class="bi bi-person-circle"></i> Crear una cuenta</a></li>
                    <% } else { %>
                            <li><a href="/user/diagnostico"><i class="bi bi-file-earmark-medical-fill"></i> Diagnóstico</a>
                            </li>
                                <% if (usuario.rol==='admin' ) { %>
                                    <li><a href="/admin/evaluaciones"><i class="bi bi-bar-chart-line-fill"></i>
                                            Evaluaciones</a></li>
                                    <li><a href="/admin/lista-diagnosticos"><i class="bi bi-file-earmark-text"></i>
                                            Lista resultados</a></li>
                                    <% } %>
                                        <li><a href="/auth/logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a>
                                        </li>
                                        <% } %>
            </ul>
        </nav>
    </div>
</header>

<script>
    const toggleBtn = document.getElementById('menu-toggle');
    const navLinks = document.getElementById('navbar-links');

    toggleBtn.addEventListener('click', () => {
        navLinks.classList.toggle('show');
        toggleBtn.classList.toggle('active');
    });
</script>