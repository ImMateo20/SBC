<%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>

    <main class="main-principal">
        <div class="main-iniciar-sesion">

            <% if (typeof message !=='undefined' ) { %>
                <div class="alert alert-danger alert-dismissible fade show text-center contenedor-mensaje" role="alert">
                    <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <form class="form-iniciar-sesion p-2 rounded-3" action="/auth/login" method="post">
                        <h2 style="align-self: center;">Iniciar sesión</h2>
                        <label for="email">Correo</label>
                        <input class="form-control" type="email" name="email" id="email" required>
                        <label for="password">Contraseña</label>
                        <input class="form-control" type="password" name="password" id="password" required>
                        <input class="form-control btn btn-success" type="submit" value="Iniciar Sesion"
                            id="boton-iniciar-sesion">
                        <span style="align-self: center;"">¿No tienes una cuenta aún? <a href="/auth/signin">Registrate
                            aqui</a></span>

                    </form>
        </div>
</main>
        <%- include('../partials/footer.ejs') %>